@using Microsoft.AspNetCore.Authentication
@using Microsoft.AspNetCore.Components.Authorization;
@inject NavigationManager Navigation

<nav id="navigationMenu" class="d-flex flex-row justify-content-between">
    <AuthorizeView>
        <Authorized>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                    <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Overview
                </NavLink>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="transactions">
                    <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Transactions
                </NavLink>
            </div>

            <AuthorizeView Roles="Admin" Context="innerAdminContext">
                <Authorized>
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="transactions">
                            <span class="bi bi-lock-fill-nav-menu" aria-hidden="true"></span> Admin
                        </NavLink>
                    </div>
                </Authorized>
            </AuthorizeView>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="logout">
                    <span class="bi bi-lock-fill-nav-menu" aria-hidden="true"></span> Log out
                </NavLink>
            </div>
        </Authorized>
        <NotAuthorized>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="login" Match="NavLinkMatch.All">
                    <span class="bi bi-key-fill-nav-menu" aria-hidden="true"></span> Login / Register
                </NavLink>
            </div>
        </NotAuthorized>
    </AuthorizeView>
    <div class="nav-item px-3">
        <NavLink class="nav-link" href="attributions" Match="NavLinkMatch.All">
            <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Attributions
        </NavLink>
    </div>

</nav>