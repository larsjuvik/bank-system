@using Microsoft.AspNetCore.Components.Authorization
@inherits LayoutComponentBase

<MudThemeProvider />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar>
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@ToggleDrawer" />
        BlueFlare
    </MudAppBar>
    <MudDrawer @bind-Open="@_navMenuDrawerOpen">
        <MudNavMenu>
            <AuthorizeView>
                <Authorized>
                    <MudNavLink Href="/" Match="NavLinkMatch.All"><MudIcon Icon="@Icons.Material.Filled.Dashboard"></MudIcon>Overview</MudNavLink>
                </Authorized>
            </AuthorizeView>
            <AuthorizeView>
                <Authorized>
                    <MudNavLink Href="/transactions" Match="NavLinkMatch.Prefix">Transactions</MudNavLink>
                </Authorized>
            </AuthorizeView>
            <AuthorizeView Roles="Admin">
                <Authorized>
                    <MudNavLink Href="/admin"  Match="NavLinkMatch.Prefix">Admin</MudNavLink>
                </Authorized>
            </AuthorizeView>
            <AuthorizeView>
                <Authorized>
                    <MudNavLink Href="/logout"  Match="NavLinkMatch.Prefix">Log out</MudNavLink>
                </Authorized>
            </AuthorizeView>
        </MudNavMenu>
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Medium">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
@code {
    bool _navMenuDrawerOpen = true;

    void ToggleDrawer()
    {
        _navMenuDrawerOpen = !_navMenuDrawerOpen;
    }
}