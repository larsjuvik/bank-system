@using WebApp.DTOs
<MudDialog>
    <TitleContent>
        Connect Card to a Bank Account
    </TitleContent>
    <DialogContent>
        <EditForm EditContext="_editContext">
            <DataAnnotationsValidator/>
            <MudStack>
                <MudSelect T="BankAccountDto" Label="Connected Bank Account" MultiSelection="false" @bind-Value="_model.ConnectedBankAccountDto">
                    @foreach (var bankAccount in AvailableBankAccounts)
                    {
                        <MudSelectItem T="string" Value="@bankAccount.AccountNumber">@bankAccount.AccountNumber</MudSelectItem>
                    }
                </MudSelect>
                <MudTextField Label="Name" @bind-Value="_model.Name" For="@(() => _model.Name)" />
            </MudStack>
        </EditForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Ok</MudButton>
    </DialogActions>
</MudDialog>

@code {
    private static ConnectCreditCardToBankAccountDto _model = new();
    private EditContext _editContext = new(_model);
    
    [CascadingParameter]
    private MudDialogInstance? MudDialog { get; set; }

    [Parameter]
    public List<BankAccountDto> AvailableBankAccounts { get; set; } = [];

    private void Submit()
    {
        var validated = _editContext.Validate();
        if (!validated) return;
        
        // TODO: connect credit card

        MudDialog?.Close(DialogResult.Ok(true));
    }

    private void Cancel() => MudDialog?.Cancel();
}